generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id              String        @id @default(cuid())
  tmdbId          Int           @unique
  title           String
  releaseYear     Int
  industry        Industry      @default(HOLLYWOOD)
  genres          String[]
  posterPath      String
  backdropPath    String
  globalSolveRate Float         @default(0.0)
  totalPlays      Int           @default(0)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  popularity      Float         @default(0.0)
  voteCount       Int           @default(0)
  dailyGames      DailyGame[]
  sessions        GameSession[]
  hints           Hint?

  @@index([title])
  @@index([industry])
  @@index([globalSolveRate])
}

model Hint {
  id             String   @id @default(cuid())
  movieId        String   @unique
  level1Blur     Int      @default(45)
  level2Dialogue String
  level3Emoji    String
  level4Trivia   String
  aiMetadata     Json?
  generatedAt    DateTime @default(now())
  movie          Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@index([movieId])
}

model GameSession {
  id           String     @id @default(cuid())
  userId       String?
  movieId      String
  currentLevel Int        @default(1)
  attempts     Int        @default(0)
  guesses      String[]
  status       GameStatus @default(IN_PROGRESS)
  isCompleted  Boolean    @default(false)
  isWon        Boolean    @default(false)
  score        Int        @default(0)
  startTime    DateTime   @default(now())
  endTime      DateTime?
  gameMode     String     @default("infinite")
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  movie        Movie      @relation(fields: [movieId], references: [id], onDelete: Cascade)
  user         User?      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([movieId])
  @@index([status])
  @@index([createdAt])
}

model DailyGame {
  id            String   @id @default(cuid())
  date          DateTime @default(now()) @db.Date
  movieId       String
  industry      Industry
  totalAttempts Int      @default(0)
  totalWins     Int      @default(0)
  createdAt     DateTime @default(now())
  movie         Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@unique([date, industry])
  @@index([date])
  @@index([industry])
}

model User {
  id               String        @id @default(cuid())
  name             String?
  email            String?       @unique
  emailVerified    DateTime?
  image            String?
  totalGamesPlayed Int           @default(0)
  totalWins        Int           @default(0)
  currentStreak    Int           @default(0)
  longestStreak    Int           @default(0)
  totalScore       Int           @default(0)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  accounts         Account[]
  gameSessions     GameSession[]
  sessions         Session[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Industry {
  HOLLYWOOD
  BOLLYWOOD
  GLOBAL
  ANIME
}

enum GameStatus {
  IN_PROGRESS
  WON
  LOST
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum LeaderboardCategory {
  BOLLYWOOD
  HOLLYWOOD
  RAPIDFIRE_BOLLYWOOD
  RAPIDFIRE_HOLLYWOOD
}

model Leaderboard {
  id            String              @id @default(cuid())
  username      String
  highScore     Int
  category      LeaderboardCategory
  moviesGuessed Int                 @default(0)
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  @@unique([username, category])
  @@index([category, highScore(sort: Desc)])
}
